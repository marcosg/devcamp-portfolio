<div class="col-md-8 blog-main">
  <h2> <%= @blog.title %></h2>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <%= tag.li link_to('Home', root_path), class: 'breadcrumb-item' %>
      <%= tag.li link_to(@blog.topic.title, topic_path(@blog.topic)), class: 'breadcrumb-item' %>
      <%= tag.li @blog.title , {class: 'breadcrumb-item active', 'aria-current': "page"}%>
      <% if logged_in?(:site_admin) %>
        <%= tag.li link_to(fa_icon('pencil-square-o'), edit_blog_path(@blog)), class: 'ml-auto' %>
        <%= tag.li link_to(fa_icon('trash'), @blog, method: :delete,
                           data: {confirm: 'Are you sure you want to delete this post?'}), class: 'ml-1' %>
      <% end %>

    </ol>
  </nav>


  <%= tag.h3 @blog.topic.title %>
  <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %>
  <p>
    <%= @blog.body %>
  </p>
</div> <!-- /.blog-main -->







