<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <%= alert_generator blog.errors.full_messages, :error %>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, @topics, :id, :title, {prompt: true}, {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
